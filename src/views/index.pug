doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title Theme Selector
    style
      | body { background-color: #{theme === 'dark' ? '#333' : '#fff'}; color: #{theme === 'dark' ? '#fff' : '#000'}; }
  body
   h1 Login
    form(action="/users/login", method="post")
      input(type="email", name="email", placeholder="Email", required=true)
      input(type="password", name="password", placeholder="Password", required=true)
      button(type="submit") Login
    p
      a(href="/users/register") Register a new user
    h2 Welcome to the Theme Selector
    form(action="/set-theme", method="post")
      select(name="theme")
        option(value="light" selected=theme === 'light') Light
        option(value="dark" selected=theme === 'dark') Dark
      button(type="submit") Set Theme
